RewriteEngine On

# Asegurar que Apache siga symlinks (necesario si usamos enlaces en uploads)
Options +FollowSymLinks

# Aumentar límites de subida de PHP (si mod_php está activo)
<IfModule mod_php7.c>
    php_value upload_max_filesize 64M
    php_value post_max_size 64M
    php_value max_execution_time 180
    php_value max_input_time 180
</IfModule>
<IfModule mod_php8.c>
    php_value upload_max_filesize 64M
    php_value post_max_size 64M
    php_value max_execution_time 180
    php_value max_input_time 180
</IfModule>

# Si piden /uploads/media/* y el archivo no existe en public, usar proxy PHP
RewriteCond %{REQUEST_URI} ^/uploads/media/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^uploads/media/(.*)$ serve_media.php?file=$1 [QSA,L]

# Si piden /uploads/cursos/* y el archivo no existe en public, usar proxy PHP
RewriteCond %{REQUEST_URI} ^/uploads/cursos/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^uploads/cursos/(.*)$ serve_uploads.php?path=cursos/$1 [QSA,L]

# Redirigir todas las peticiones que no sean archivos o directorios existentes al index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Opcional: Forzar HTTPS en producción
#RewriteCond %{HTTPS} off
#RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Configuraciones de seguridad
<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>

# Prevenir acceso directo a archivos PHP sensibles
<FilesMatch "^(config|app)/">
    Order allow,deny
    Deny from all
</FilesMatch>

# Headers de seguridad
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>